{
  "name": "chinayin/slsconsole",
  "description": "Aliyun SLS log Dashboard",
  "keywords": [
    "aliyun",
    "sls",
    "log",
    "console"
  ],
  "homepage": "https://github.com/chinayin",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "chinayin",
      "email": "whereismoney@qq.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-curl": "*",
    "ext-json": "*",
    "alibabacloud/sdk": "^1.0",
    "colinodell/json5": "^2.2",
    "sentry/sdk": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "SlsConsole\\": "src/SlsConsole"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
    }
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-ci": "vendor/bin/phpunit --coverage-text",
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix -v",
    "phpstan": "vendor/bin/phpstan analyse",
    "travis": [
      "composer php-cs-fixer",
      "composer phpstan"
    ]
  }
}
